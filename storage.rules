rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Users can read all files but cannot write
    // File uploads will be handled by admin interface or cloud functions
    match /{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if false; // Only admin/cloud functions can write
    }
    
    // Exception: Allow users to upload profile pictures to their own folder
    match /users/{userId}/profile/{fileName} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Exception: Allow users to upload exam/exercise submissions
    match /submissions/{userId}/{submissionId}/{fileName} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}